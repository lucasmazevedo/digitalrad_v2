    <div class="divider thin" style="margin:80px 0;height: 1px;"></div>
    <a name="nossa-estrutura"></a>

    <div class="section_row" style="padding:0;">
      <div class="section_inner">
        <div class="at-fancy-heading-v1 textcenter" style="margin-top:80px;">
          <h2 style="color: #8a8c98;">Nossa Estrutura</h2>
          <span class="at-fancy-heading-v1-sep"></span>
        </div>
        <div class="demo_space" style="height:80px;"></div>
        <% @structures.each do |structure| %>
        <div class="one_fourth">
        	<div class="at-image inside-image" data-animation="fadeIn">
        		<div class="at-image-holder">
        			<div class="at-image-inner">
                <%= image_tag(structure.photo_url, class: "lightbox-enable", alt: structure.title, width: "300", height: "200") %>
        				<div class="at-image-overlay"></div>
                <%= link_to "<i class='pe-3x pe-fw pe-7s-plus'></i>".html_safe, structure.photo_url, "data-rel": "prettyPhoto", class: "at-image-lightbox lightbox", alt: structure.title %>
        			</div>
        			<div class="at-image-caption">
        				<span class="at-image-caption-title"><%= structure.title %></span>
        				<span class="at-image-caption-txt"><%= structure.subtitle %></span>
        			</div>
        		</div>
        	</div>
        </div>
        <% end %>
            </div><!-- .section_inner-->
    </div><!-- .section_row-->


