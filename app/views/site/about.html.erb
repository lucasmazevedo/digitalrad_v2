<div id="main" class="content-area">
  <div id="primary" class="pagemid">
    <div class="section_row" style="padding:0;">
      <div class="section_inner">
        <!-- SOBRE DIGITAL HOME BLOCK -->
        <%= @block_sobre.content.html_safe %>
          <!-- SOBRE DIGITAL HOME BLOCK -->
            </div><!-- .section_inner-->
