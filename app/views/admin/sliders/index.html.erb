<div class="">
  <div class="page-title">
    <div class="title_left">
      <h3>Sliders</h3>
    </div>

    <div class="title_right">
      <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
        <%= render "layouts/shared_admin/search" %>
      </div>
    </div>
  </div>

  <div class="clearfix"></div>

  <div class="row">
    <div class="col-md-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>Sliders Cadastrados</h2>
          <ul class="nav navbar-right">
            <li><%= button_to new_admin_slider_path, method: :get, class: "btn btn-round btn-primary" do %>
                <i class="fa fa-plus"></i> Novo Laudo
              <% end %></li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <table class="table table-striped projects">
            <thead>
              <tr>
                <th style="width: 1%">#</th>
                <th style="width: 20%">Título</th>
                <th>Subtítulo</th>
                <th>Imagem</th>
                <th>Cadastrado em:</th>
                <th style="width: 15%">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @sliders.each do |slider| %>
              <tr>
                <td><%= slider.id %></td>
                <td><%= slider.title %></td>
                <td><%= truncate slider.subtitle %></td>
                <td>
                  <ul class="list-inline">
                    <li>
                      <% if slider.hero_image? %>
                      <img src="<%= slider.hero_image.thumb%>" class="avatar" alt="<%= slider.title %>">
                      <% else %>
                      <img src="/sprites/empty-avatar.jpg" class="avatar" alt="<%= slider.title %>">
                      <% end %>
                    </li>
                  </ul>
                </td>
                <td><%= slider.created_at %></td>
                <td>
                  <!-- <%= link_to '<i class="fa fa-eye"></i> Show'.html_safe, [:admin, slider], class: "btn btn-primary btn-xs" %> -->
                  <%= link_to '<i class="fa fa-pencil"></i> Editar'.html_safe, edit_admin_slider_path(slider), class: "btn btn-info btn-xs" %>
                  <%= link_to '<i class="fa fa-trash-o"></i> Excluir'.html_safe, [:admin, slider], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <!-- end project list -->
        </div>
      </div>
    </div>
  </div>
</div>
