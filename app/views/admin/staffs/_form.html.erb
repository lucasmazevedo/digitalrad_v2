<%= simple_form_for([:admin, @staff], wrapper: "horizontal_form", :html=> { class: 'form-horizontal form-label-left' }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :name, placeholder: "Nome do Médico" %>
  <%= f.input :speciality, placeholder: "Especialidade" %>
  <%= f.input :resume, :input_html => {:rows => 8}, placeholder: "Resumo da qualificação" %>
  <%= f.input :lattes, placeholder: "Link do Lattes" %>


<div class="form-group">
  <%= f.label :photo, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
  <div class="col-md-6 col-sm-6 col-xs-12">
     <div class="fileinput fileinput-new" data-provides="fileinput">
        <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
          <%= image_tag(@staff.photo.small.url) if @staff.photo? %>
        </div>
        <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"></div>
        <div>
          <span class="btn btn-default btn-file">
            <span class="fileinput-new">Selecionar Imagem</span>
            <span class="fileinput-exists">Alterar</span>
            <%= f.file_field :photo %></span>
            <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remover</a>
        </div>
      </div>
    </div>
</div>

<%= f.input :status, collection: Staff.statuses.keys,
            :selected => Staff.statuses.keys[@staff[:status].to_i],
            input_html: { autocomplete: 'off' },
            label_method: lambda {|k| k.humanize} %>

<div class="ln_solid"></div>
  <div class="form-group">
    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
      <%= link_to 'Cancel', admin_staffs_path, class: "btn btn-primary" %>
      <%= f.button :submit, class: "btn btn-success" do %>
        Enviar
      <% end %>
    </div>
  </div>
<% end %>
