<p id="notice"><%= notice %></p>

<h1>Case Attachments</h1>

<table>
  <thead>
    <tr>
      <th>Case</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @case_attachments.each do |case_attachment| %>
      <tr>
        <td><%= case_attachment.case_id %></td>
        <td><%= case_attachment.photo %></td>
        <td><%= link_to 'Show', case_attachment %></td>
        <td><%= link_to 'Edit', edit_case_attachment_path(case_attachment) %></td>
        <td><%= link_to 'Destroy', case_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Case Attachment', new_case_attachment_path %>
