<div class="">
  <div class="page-title">
    <div class="title_left">
      <h3>Soluções</h3>
    </div>

    <div class="title_right">
      <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
        <%= render "layouts/shared_admin/search" %>
      </div>
    </div>
  </div>

  <div class="clearfix"></div>

  <div class="row">
    <div class="col-md-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>Lista de Soluções</h2>
          <ul class="nav navbar-right">
            <li><%= button_to new_admin_solution_path, method: :get, class: "btn btn-round btn-primary" do %>
                <i class="fa fa-plus"></i> Nova Solução
              <% end %></li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <table class="table table-striped projects">
            <thead>
              <tr>
                <th style="width: 1%">#</th>
                <th style="width: 20%">Título</th>
                <th>Descrição</th>
                <th>Cadastrado em:</th>
                <th style="width: 15%">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% @solutions.each do |solution| %>
              <tr>
                <td><%= solution.id %></td>
                <td><%= solution.title %></td>
                <td><%= truncate solution.content %></td>
                <td><%= solution.created_at %></td>
                <td>
                  <!-- <%= link_to '<i class="fa fa-eye"></i> Show'.html_safe, [:admin, solution], class: "btn btn-primary btn-xs" %> -->
                  <%= link_to '<i class="fa fa-pencil"></i> Editar'.html_safe, edit_admin_solution_path(solution), class: "btn btn-info btn-xs" %>
                  <%= link_to '<i class="fa fa-trash-o"></i> Excluir'.html_safe, [:admin, solution], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
          <!-- end project list -->
        </div>
      </div>
    </div>
  </div>
</div>
