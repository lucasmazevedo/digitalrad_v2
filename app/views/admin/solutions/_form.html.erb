<%= simple_form_for([:admin, @solution], wrapper: "horizontal_form", :html=> { class: 'form-horizontal form-label-left' }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :title, placeholder: "Titulo" %>
  <%= f.input :content, placeholder: "Descrição", :input_html => {:rows => 8} %>

<%= f.input :status, collection: Solution.statuses.keys,
            :selected => Solution.statuses.keys[@solution[:status].to_i],
            input_html: { autocomplete: 'off' },
            label_method: lambda {|k| k.humanize} %>

<div class="ln_solid"></div>
  <div class="form-group">
    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
      <%= link_to 'Cancel', admin_solutions_path, class: "btn btn-primary" %>
      <%= f.button :submit, class: "btn btn-success" do %>
        Enviar
      <% end %>
    </div>
  </div>
<% end %>
